<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:assignment_2425"
             x:Class="assignment_2425.App">
    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="FontSize">14</x:Double>

            <x:String x:Key="ButtonBackColor">#1B4332</x:String>

            <x:Int32 x:Key="IconWidthSize">20</x:Int32>

            <x:Int32 x:Key="IconHeightSize">30</x:Int32>

            <x:Int32 x:Key="ImageWidthSize">100</x:Int32>

            <x:Int32 x:Key="ImageHeightSize">85</x:Int32>

            <x:String x:Key="LabelTextColor">#000000</x:String>

            <x:String x:Key="ButtonTextColor">#FFFFFF</x:String>

            <x:Int32 x:Key="InputBoxWidth">44</x:Int32>
            <x:Int32 x:Key="ButtonBoxWidth">44</x:Int32>
            <x:Int32 x:Key="LeaderboardWidth">44</x:Int32>

            <x:String x:Key="BackGroundColorSet">#B7D1B7</x:String>

            <x:String x:Key="BackButton">backarrow.svg</x:String>

            <x:String x:Key="InformationButton">info_icon.svg</x:String>
            <x:String x:Key="AudioButton">audio_icon.svg</x:String>

            <Style TargetType="Label">
                <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
                <Setter Property="FontFamily" Value="GothamRounded"/>
                <Setter Property="TextColor" Value="{DynamicResource LabelTextColor}"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
                <Setter Property="FontFamily" Value="GothamRounded"/>
                <Setter Property="PlaceholderColor" Value="{DynamicResource LabelTextColor}"/>
                <Setter Property="TextColor" Value="{DynamicResource LabelTextColor}"/>
            </Style>

            <Style TargetType="Border">
                <Setter Property="Stroke" Value="{DynamicResource LabelTextColor}"/>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Color" Value="{DynamicResource LabelTextColor}"/>
            </Style>

            <Style TargetType="Grid">
                <Setter Property="BackgroundColor" Value="{DynamicResource BackGroundColorSet}"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
                <Setter Property="BackgroundColor" Value="{DynamicResource ButtonBackColor}"/>
                <Setter Property="BorderWidth" Value="2"/>
                <Setter Property="Margin" Value="0,0,0,25"/>
                <Setter Property="TextColor" Value="{DynamicResource ButtonTextColor}"/>
                <Setter Property="FontFamily" Value="GothamRounded"/>
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
