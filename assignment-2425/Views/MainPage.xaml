<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.Views.MainPage">

    <Grid x:Name="mainGrid">

        <AbsoluteLayout x:Name="absoluteLayout" BackgroundColor="Transparent"/>

        <!-- Main page buttons -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center">

            <Button Text="Start"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Bet"/>

            <Button Text="Leaderboards"
                    Command="{Binding LeaderBoardCommand}"/>

            <Button Text="Settings"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Settings"/>

            <Button Text="Instructions"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Walkthrought"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
